@page "/schedule"
@using HealthcareFrontend.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>Schedule Appointment</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">New Appointment</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@newAppt" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger small" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Patient Name</label>
                            <InputText @bind-Value="newAppt.PatientName" class="form-control" placeholder="Enter full name" />
                            <ValidationMessage For="@(() => newAppt.PatientName)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Doctor Name</label>
                            <InputText @bind-Value="newAppt.DoctorName" class="form-control" placeholder="Enter doctor's name" />
                            <ValidationMessage For="@(() => newAppt.DoctorName)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date and Time</label>
                            @* Use DateTimeLocal for better browser compatibility *@
                            <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="newAppt.AppointmentDate" class="form-control" />
                            <ValidationMessage For="@(() => newAppt.AppointmentDate)" class="text-danger small" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Confirm Appointment</button>
                            <button type="button" class="btn btn-outline-secondary" @onclick='() => Nav.NavigateTo("/appointments")'>Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // We set the date to tomorrow by default to avoid the "Past Date" 400 error from your API
    private Appointment newAppt = new Appointment { AppointmentDate = DateTime.Now.AddDays(1) };

    private async Task HandleSubmit()
    {
        try
        {
            // We use "api/Appointments" without a leading slash because Program.cs 
            // should have the trailing slash in the BaseAddress.
            var response = await Http.PostAsJsonAsync("api/Appointments", newAppt);

            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/appointments");
            }
            else
            {
                // If the API returns 400, this will tell us WHY (e.g., "Past Date" or "Validation Error")
                var errorBody = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"API Rejected Request: {response.StatusCode} - {errorBody}");
            }
        }
        catch (Exception ex)
        {
            // This captures CORS or network connection issues
            Console.WriteLine($"Critical Connection Error: {ex.Message}");
        }
    }
}