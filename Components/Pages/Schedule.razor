@page "/schedule"
@using HealthcareFrontend.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>Schedule Appointment</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Book New Appointment</h3>
                </div>
                <div class="card-body">
                    @* We use OnValidSubmit so code only runs if the form is valid *@
                        <EditForm Model="@newAppt" OnValidSubmit="HandleSubmit" FormName="appointmentForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger small" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Patient Name</label>
                            <InputText @bind-Value="newAppt.PatientName" class="form-control" />
                            <ValidationMessage For="@(() => newAppt.PatientName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Doctor Name</label>
                            <InputText @bind-Value="newAppt.DoctorName" class="form-control" />
                            <ValidationMessage For="@(() => newAppt.DoctorName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date and Time</label>
                            <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="newAppt.AppointmentDate" class="form-control" />
                            <ValidationMessage For="@(() => newAppt.AppointmentDate)" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Confirm Appointment</button>
                            <button type="button" class="btn btn-secondary" @onclick='() => Nav.NavigateTo("/appointments")'>Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Default to tomorrow to prevent "Past Date" errors from the API
    private Appointment newAppt = new Appointment { AppointmentDate = DateTime.Now.AddDays(1) };

    private async Task HandleSubmit()
    {
        try
        {
            // IMPORTANT: The leading "/" ensures we hit the API domain, not the UI page
            var apiUrl = "https://apihealth-hgd6fchsh0a3hddf.brazilsouth-01.azurewebsites.net/api/Appointments";
            Console.WriteLine("Sending to API...");

            var response = await Http.PostAsJsonAsync(apiUrl, newAppt);
            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/appointments");
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"API Error: {response.StatusCode} - {errorMsg}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Network Error: {ex.Message}");
        }
    }
}