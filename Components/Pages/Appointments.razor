@page "/appointments"
@using HealthcareFrontend.Models
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Appointments List</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Appointment Records</h3>
        <a href="/schedule" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Appointment
        </a>
    </div>

    @if (appointments == null)
    {
        <div class="d-flex align-items-center">
            <strong>Loading records from Azure...</strong>
            <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
        </div>
    }
    else if (appointments.Length == 0)
    {
        <div class="alert alert-warning">No appointments found. Use the "New Appointment" button to add one!</div>
    }
    else
    {
        <table class="table table-striped table-hover border">
            <thead class="table-dark">
                <tr>
                    <th>ID</th> @* Displays the Unique Identity assigned by SQLite *@
                    <th>Patient Name</th>
                    <th>Assigned Doctor</th>
                    <th>Scheduled Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in appointments)
                {
                    <tr>
                        <td class="fw-bold">#@appt.Id</td>
                        <td>@appt.PatientName</td>
                        <td>@appt.DoctorName</td>
                        <td>@appt.AppointmentDate.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private Appointment[]? appointments;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            // Fetches the list from the live API base address defined in Program.cs
            appointments = await Http.GetFromJsonAsync<Appointment[]>("api/Appointments");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"API Load Error: {ex.Message}");
        }
    }
}