@page "/appointments"
@using HealthcareFrontend.Models
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Appointments List</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Current Appointments</h3>
        <a href="/schedule" class="btn btn-primary">Add New Record</a>
    </div>

    @if (appointments == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Loading records from Azure...</p>
        </div>
    }
    else if (appointments.Length == 0)
    {
        <div class="alert alert-info">No appointments found in the database.</div>
    }
    else
    {
        <table class="table table-striped border shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Patient Name</th>
                    <th>Doctor</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in appointments)
                {
                    <tr>
                        <td class="fw-bold text-primary">#@appt.Id</td>
                        <td>@appt.PatientName</td>
                        <td>@appt.DoctorName</td>
                        <td>@appt.AppointmentDate.ToString("f")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private Appointment[]? appointments;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Fetch list from API
            appointments = await Http.GetFromJsonAsync<Appointment[]>(requestUri: "/api/Appointments");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load Error: {ex.Message}");
        }
    }
}